{
  "include": ["server/index.ts", "server/**/*.ts"],
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/*.test.ts",
    "**/vite.config.ts",
    "**/vite.ts"
  ],
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/typescript/tsbuildinfo.server",
    "module": "CommonJS",
    "target": "ES2020",
    "outDir": "dist/server",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*", "shared/*"]
    }
  }
}
