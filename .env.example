# Environment variables for SubscriptionTracker
# Copy this file to .env and fill in your actual values

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority
MONGODB_DB=Subtrackerr

# Security Keys - CRITICAL: Keep these secret!
# Generate new keys by running: npm run generate-keys
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# SMTP Configuration for Email Sending
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=your-email@gmail.com

# Resend (recommended for Render/hosted deployments)
# If RESEND_API_KEY is set, the app will send emails using Resend instead of SMTP.
RESEND_API_KEY=
# Must be a verified sender/domain in Resend.
RESEND_FROM=onboarding@resend.dev

# Environment (development or production)
NODE_ENV=development
